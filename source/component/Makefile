include $(SDK_DIR)/base.mak

#+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
#       variable
#+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
objects := ha_codec

depends := $(objects)

depends += hiplayer

#+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
#   rules
#+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
.PHONY: all install

install: all

all: $(depends)

.PHONY: $(depends)

$(objects):
	$(AT)make -C $@ all
	
hiplayer:
	$(AT)test ! -d hiplayer || make -C hiplayer all
	
 	